<!-- As a general rule, if any parameters are omitted, the default will be used. -->

<atom>
    <common>
        <verbose>false</verbose>  <!-- produce a lot of debug output (default false) -->
        <inputPath>../input/</inputPath>  <!-- input data path -->

        <SequelFile>...</SequelFile>
        <BathymetryFile>..</BathymetryFile>
        <SurfaceTemperatureFile>..</SurfaceTemperatureFile>
        <SurfacePrecipitationFile>..</SurfacePrecipitationFile>
        <BathymetryFile>..</BathymetryFile>
        <TransferFile>..</TransferFile>


        <!-- time period -->

        <!-- Ma; this will run from 0 to 140Ma at 10Ma intervals -->
        <!-- The model expects that there will be a ??? (Golonka?) file for each interval, named appropriately. -->
        <startTime>0</startTime>
        <interval>10</interval>
        <endTime>140</endTime>
    </common>

    <atmosphere>
        <!-- SIMULATION PARAMETERS -->
        <velocity_iter_max>2</velocity_iter_max>  <!-- TODO (default 2) -->
        <pressure_iter_max>2</pressure_iter_max>  <!-- TODO (default 2) -->

        <!-- PHYSICAL PARAMETERS -->
        <coriolis>1.0</coriolis>        <!-- coriolis force (default 1.0) -->
        <centrifugal>1.0</centrifugal>  <!-- centrifugal force (default 1.0) -->
        <WaterVapour>1.0</WaterVapour>  <!-- water vapour (default 1.0) -->
        <buoyancy>1.0</buoyancy>        <!-- buoyancy (default 1.0) -->
        <CO2>1.0</CO2>                  <!-- CO2 (default 1.0) -->
    </atmosphere>

    <hydrosphere>
    </hydrosphere>
</atom>
